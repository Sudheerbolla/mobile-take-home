<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardEpisode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/five_dp"
    app:cardElevation="@dimen/two_dp"
    app:cardMaxElevation="@dimen/two_dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/five_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/five_dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/three_dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtEpisodeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/txtAirDate"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sixteen_sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAirDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/fourteen_sp" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtEpisode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_background"
            android:paddingStart="@dimen/seven_dp"
            android:paddingTop="@dimen/four_dp"
            android:paddingEnd="@dimen/seven_dp"
            android:paddingBottom="@dimen/four_dp"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/thirteen_sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>